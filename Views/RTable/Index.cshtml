@model IEnumerable<MVCRestaurant27Tem2022.Models.RTable>
<style>
    .tableStatusMain {
        margin: 1%;
        float: right;
    }

    .tableStatus {
        border-radius: 10%;
        background-color: greenyellow;
        color: red;
        float: left;
        width: 13%;
        padding: 10px;
        height: 100px;
        margin: 1%;
        text-align: center;
        position: relative;
    }

    .tableStatusFree {
        background-color: springgreen;
    }

    .tableStatusSeated {
        background-color: rgb(42, 0, 181);
        color: black;
    }

    .tableStatusReserved {
        background-color: rgb(235, 158, 52);
        color: dimgray;
    }

    .tableStatusInfo {
        float: left;
        width: 75px;
        height: 23px;
        margin: 1%;
        padding: 0px;
    }

    .tableLink {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
    }
</style>
<div>
    @{ViewBag.Title = "Tables";}
    <h2>Table Status</h2>
    <div class="tableStatusFree"></div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div>
        <div class="tableStatus tableStatusFree tableStatusInfo">Free</div>
        <div class="tableStatus tableStatusSeated tableStatusInfo">Seated</div>
        <div class="tableStatus tableStatusReserved tableStatusInfo">Reserved</div>
    </div>
    <div class="tableStatusMain">
        @{int i = 0;}
        @foreach (var item in Model)
        {
            if (Convert.ToString(item.tstatus) == "f")
            {
                <div class="tableStatus tableStatusFree">
                    <h1><a href="@Url.Action( "Edit", new { id = item.id_rtable })">@Html.DisplayFor(modelItem => item.id_rtable)<span class="tableLink"></span></a></h1>
                </div>
            }
            else if (Convert.ToString(item.tstatus) == "s")
            {
                <div class="tableStatus tableStatusSeated">
                    <h1><a href="@Url.Action("Edit", new { id = item.id_rtable })">@Html.DisplayFor(modelItem => item.id_rtable)<span class="tableLink"></span></a></h1>
                </div>
            }
            else
            {
                <div class="tableStatus tableStatusReserved">
                    <h1><a href="@Url.Action( "Edit", new { id = item.id_rtable })">@Html.DisplayFor(modelItem => item.id_rtable)<span class="tableLink"></span></a></h1>
                </div>
            }
        }
    </div>
</div>
