<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    .table {
        font-size: 25px;
    }

    @@media only screen and (max-width: 600px) {
        .table {
            font-size: 13px;
        }
    }
    @@media only screen and (min-width: 601px) {
        .table {
            font-size: 15px;
        }
    }
    @@media only screen and (min-width: 801px) {
        .table {
            font-size: 18px;
        }
    }
    @@media only screen and (min-width: 1400px) {
        .table {
            font-size: 25px;
        }
    }

    .container {
        margin-right: 2%;
        margin-left: 2%;
        width: 96%;
    }
    .contentMain {
        width: 100%;
    }

    @@media only screen and (min-width: 1900px) {
        .container {
            margin-right: 10%;
            margin-left: 10%;
            width: 80%;
        }
    }
/*    body{
        background-color:rgb(30,30,30);
        color:darkgray;
    }*/
    body {
        background-color: rgb(245 255 255);
    }
</style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(@*"👨🏻‍⚕️Dr. Trouble's👨‍🍳"*@ "Restaurant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    @*<li>@Html.ActionLink("Waiter Management", "Index", "Waiter")</li>*@
                    @*<li>@Html.ActionLink("Dish & Drink Types", "Index", "fdType")</li>*@
                    @*<li>@Html.ActionLink("FD Manage", "Index", "FoodDrink")</li>*@
                    <li>@Html.ActionLink("Reservation", "Index", "Reservation")</li>
                    <li>@Html.ActionLink("ROrder", "Index", "ROrder")</li>
                    <li>@Html.ActionLink("Admin Panel", "Index", "AdminPanel")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                        @Html.ActionLink("Logged in as " + @User.Identity.Name, "", "", new { @class = "nav-link" })
                    </li>

                    <li>@Html.ActionLink("log out", "Logout", "Security")</li>
                    }
                    else
                    {
                    <li>@Html.ActionLink("login", "Login", "Security")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>2022 - Onur Yenidoğan - Kayaport Internship Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
