<style>
    .contentMain {
        float: left;
        width: 100%;
    }
    .tableStatusMain {
        margin: 1%;
        float: right;
        width: 100%;
    }
    .tableStatus {
        border-radius: 10%;
        background-color: greenyellow;
        float: left;
        width: 48%;
        padding: 10px;
        height: 100px;
        margin: 1%;
        text-align: center;
        position: relative;
    }
    @@media only screen and (max-width: 900px) {
        .tableStatus {
            width: 98%;
        }
    }
    .tableStatusFree {
        background-color: springgreen;
    }
    .tableStatusFree a {
            /*color:red;*/
            color: lightseagreen;
     }
    .tableStatusSeated a {
        color: midnightblue;
    }
    .tableStatusSeated {
        /*background-color: rgb(42, 0, 181);*/
        background-color: royalblue;
        /*color: black;*/
    }
    .tableStatusReserved {
        background-color: rgb(235, 158, 52);
        color: dimgray;
    }
        .tableStatusReserved a {
            color: dimgray;
        }
    .tableStatusInfo {
        float: left;
        height: 65px;
        margin: 1%;
        padding: 0px;
        min-width: 120px;
    }
    .tableLink {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
    }
</style>
<div class="contentMain">
    <h2>@ViewBag.Title</h2>
    <div class="tableStatusMain">
        <div class="tableStatus tableStatusFree">
            <h1><a href="@Url.Action("Table")">Tables<span class="tableLink"></span></a></h1>
        </div>
        <div class="tableStatus tableStatusFree">
            <h1><a href="@Url.Action("Index", "fdType")">Categories<span class="tableLink"></span></a></h1>
        </div>
        <div class="tableStatus tableStatusFree">
            <h1><a href="@Url.Action("Index", "FoodDrink")">Menu Items<span class="tableLink"></span></a></h1>
        </div>
        <div class="tableStatus tableStatusFree">
            <h1><a href="@Url.Action("Index", "Waiter")">Waiter Management<span class="tableLink"></span></a></h1>
        </div>
        <div class="tableStatus tableStatusFree">
            <h1><a href="@Url.Action("Index", "BillCompleted")">Bill History<span class="tableLink"></span></a></h1>
        </div>
        <div class="tableStatus tableStatusFree">
            <h1><a href="@Url.Action("Index", "ROrderCompleted")">Order History<span class="tableLink"></span></a></h1>
        </div>
        <div class="tableStatus tableStatusFree">
            <h1><a href="@Url.Action("Index", "ReservationHistory")">Reservation History<span class="tableLink"></span></a></h1>
        </div>
    </div>
</div>

