<style>
    .contentMain {
        float: left;
        width: 100%;
    }
    .AdminButtonMain {
        /*margin: 1%;*/
        float: left;
        width: 100%;
    }
    .AdminButton {
        border-radius: 10%;
        background-color: greenyellow;
        float: left;
        width: 48%;
        padding: 10px;
        height: 100px;
        margin: 1%;
        text-align: center;
        position: relative;
    }
    @@media only screen and (max-width: 375px) {
        h1{
            font-size:30px;
        }
    }
    @@media only screen and (max-width: 900px) {
        .AdminButton {
            width: 90%;
            margin-left:5%;
            margin-right:5%
        }
    }
    @@media only screen and (min-width: 1200px) {
        .AdminButton {
            width: 32.3%;
            margin: 0.5%;
        }
    }
    @@media only screen and (min-width: 1400px) {
        .container {
            margin-left: 10%;
            margin-right: 10%;
            float: left;
            width: 80%;
        }
    }
    .AdminButtonFree {
        background-color: lightcyan;
        border-style: solid;
        border-color: darkgray;
    }
    .AdminButtonFree a {
            /*color:red;*/
            color: rgb(30,30,30);
     }
    .tableLink {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
    }
</style>
<div class="contentMain">
    <h2>@ViewBag.Title</h2>
    <div class="AdminButtonMain">
        <div class="AdminButton AdminButtonFree">
            <h1><a href="@Url.Action("Table")">Tables<span class="tableLink"></span></a></h1>
        </div>
        <div class="AdminButton AdminButtonFree">
            <h1><a href="@Url.Action("Index", "fdType")">Categories<span class="tableLink"></span></a></h1>
        </div>
        <div class="AdminButton AdminButtonFree">
            <h1><a href="@Url.Action("Index", "FoodDrink")">Menu Items<span class="tableLink"></span></a></h1>
        </div>
        <div class="AdminButton AdminButtonFree">
            <h1><a href="@Url.Action("Index", "Waiter")">Waiter Management<span class="tableLink"></span></a></h1>
        </div>
        <div class="AdminButton AdminButtonFree">
            <h1><a href="@Url.Action("Index", "BillCompleted")">Bill History<span class="tableLink"></span></a></h1>
        </div>
        <div class="AdminButton AdminButtonFree">
            <h1><a href="@Url.Action("Index", "ROrderCompleted")">Order History<span class="tableLink"></span></a></h1>
        </div>
        <div class="AdminButton AdminButtonFree">
            <h1><a href="@Url.Action("Index", "ReservationHistory")">Reservation History<span class="tableLink"></span></a></h1>
        </div>
    </div>
</div>

