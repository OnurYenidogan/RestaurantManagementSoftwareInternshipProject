@model IEnumerable<MVCRestaurant27Tem2022.Models.FoodDrink>
<style>
    .contentMain {
        float: left;
    }

    .tableStatusMain {
        margin: 1%;
        float: left;
        width: 100%;
    }

    .tableStatus {
        border-radius: 10%;
        background-color: greenyellow;
        float: left;
        width: 14%;
        padding: 10px;
        height: 100px;
        margin: 1%;
        text-align: center;
        position: relative;
    }

    @@media only screen and (max-width: 900px) {
        .tableStatus {
            width: 20%;
            /*            margin-left: 2.5%;
            margin-right: 2.5%;*/
            margin: 2.5%
        }
    }

    @@media only screen and (min-width: 1100px) {
        .tableStatus {
            width: 14.66%;
            margin: 1%
        }
    }

    @@media only screen and (min-width: 1300px) {
        .tableStatus {
            width: 11%;
            margin: 0.7%
        }
    }

    @@media only screen and (min-width: 1300px) {
        .tableStatus {
            width: 9.2%;
            margin: 0.4%
        }
    }

    @@media only screen and (min-width: 1900px) {
        .container {
            margin-right: 2%;
            margin-left: 2%;
            width: 96%;
        }
    }

    .tableStatusFree {
        background-color: springgreen;
    }

        .tableStatusFree a {
            /*color:red;*/
            color: lightseagreen;
        }

    .tableStatusSeated a {
        color: midnightblue;
    }

    .tableStatusSeated {
        /*background-color: rgb(42, 0, 181);*/
        background-color: royalblue;
        /*color: black;*/
    }

    .tableStatusReserved {
        background-color: rgb(235, 158, 52);
        color: dimgray;
    }

        .tableStatusReserved a {
            color: dimgray;
        }

    .tableStatusInfo {
        float: left;
        height: 65px;
        margin: 1%;
        padding: 0px;
        min-width: 120px;
    }

    .tableLink {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
    }
</style>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="contentMain">
    @{ViewBag.Title = "Tables";}
    <h2>Table Status</h2>
    @*<div class="tableStatusFree"></div>
    <div>
        <div class="tableStatus tableStatusFree tableStatusInfo">
            <h3><a>Free</a></h3>
        </div>
        <div class="tableStatus tableStatusSeated tableStatusInfo">
            <h3><a>Seated</a></h3>
        </div>
        <div class="tableStatus tableStatusReserved tableStatusInfo">
            <h3><a>Reserved</a></h3>
        </div>*@
    </div>
    <div class="tableStatusMain">
        @*@{int i = 0;}*@
        @foreach (var item in Model)
        {

                <div class="tableStatus tableStatusFree">
                    <h3><a href="@Url.Action( "Details", new { id = item.FDname })">@Html.DisplayFor(modelItem => item.FDname)<span class="tableLink"></span></a></h3>
                </div>

        }
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.Label("Name")
        </th>
        <th>
            @Html.Label("Price")
        </th>
        <th>
            @Html.Label("Is in the menu")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.fdType.typeName)*@
            @Html.Label("Category")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FDname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.onmenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fdType.typeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_FD }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_FD }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_FD })
        </td>
    </tr>
}

</table>
